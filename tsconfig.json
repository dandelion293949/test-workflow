{
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "lib": ["es2018", "dom", "esnext"],
    "typeRoots": ["./node_modules/@types", "./tools/@types"]
  },
  "include": ["./src/**/*", "./tools/**/*"],
  "exclude": ["node_modules"]
}
